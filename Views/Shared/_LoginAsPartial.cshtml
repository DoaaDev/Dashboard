@using Microsoft.AspNetCore.Identity
@using Dashboard.Areas.Identity.Data

@inject SignInManager<DashboardUser> SignInManager
@inject UserManager<DashboardUser> UserManager
<style>
a{
    color:white;
}
button{
    color:white;
}
</style>
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout</button>
        </form>
    </li>
}
</ul>
