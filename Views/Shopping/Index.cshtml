@{
    Layout = "~/Views/Shared/_LayoutShopping.cshtml";
    @model IEnumerable<ProductDetails>;
    var product = ViewBag.product;
}

<div class="container">
        <section style="background-color: #eee;">
            <div class="container py-5">
            <div class="row justify-content-center mb-3">
                <h1>المنتجات</h1>
            </div>
            @foreach (var item in Model)
            {
                <div class="row justify-content-center mb-3">
                    <div class="col-md-12 col-xl-10">
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                        <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                            <img src="~/assets/images/@item.Image"
                                                 class="w-100" />
                                            <a href="#!">
                                                <div class="hover-overlay">
                                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                        @foreach(var item1 in product)
                                        {
                                            if (item1.Id == item.ProductId)
                                            {
                                                <h5>@item1.ProductName</h5>
                                            }
                                        }
                                        <p class="text-truncate mb-4 mb-md-0">
                                            @item.Description
                                        </p>
                                    </div>
                                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                        <div class="d-flex flex-row align-items-center mb-1">
                                            <h4 class="mb-1 me-1">@item.Price</h4>
                                            <span class="text-danger"><s>@(item.Price + (item.Price * 15 / 100))</s></span>
                                        </div>
                                        <h6 class="text-success">شحن مجاني</h6>
                                        <div class="d-flex flex-column mt-4">
                                            <a asp-action="ProductDeatils" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm">التفاصيل</a>
                                            <button class="btn btn-outline-primary btn-sm mt-2" type="button">
                                                اضافة الى المفضلة
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </section>
</div>
