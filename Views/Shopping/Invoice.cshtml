@model Invoice
@{
    Layout = "~/Views/Shared/_LayoutShopping.cshtml";
}

<div class="container" dir="rtl">
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="card">
                <div class="card-body mx-4">
                    <div class="container">
                        <p class="my-5 mx-5 text-center" style="font-size: 30px;">شكرا على الشراء</p>
                        <div class="row text-center">
                            <ul class="list-unstyled">
                                <li class="text-black">@ViewBag.user</li>
                                <li class="text-muted mt-1"><span class="text-black">رقم الفاتورة</span> #@Model.Id</li>
                                <li class="text-black mt-1">@DateTime.Now</li>
                            </ul>
                            <hr>
                        </div>
                         <div class="row">
                            <div class="col-xl-10">
                                <p>@Model.ProductName</p>
                                <p>الكمية:@Model.QTY</p>
                            </div>
                            <div class="col-xl-2">
                                <p class="float-end">
                                    @Model.Price
                                    <span><s>@(Model.Price + (Model.Price * 15 / 100))</s></span>
                                </p>
                            </div>
                            <hr>
                        </div>
                        <div class="row">
                            <div class="col-xl-10">
                                <p>الضريبة</p>
                            </div>
                            <div class="col-xl-2">
                                <p class="float-end">
                                    @(@Model.Tax *100)%
                                </p>
                            </div>
                            <hr>
                        </div>
                        <div class="row">
                            <div class="col-xl-10">
                                <p>الخصم</p>
                            </div>
                            <div class="col-xl-2">
                                <p class="float-end">
                                    @(@Model.Discount *100)%
                                </p>
                            </div>
                            <hr style="border: 2px solid black;">
                        </div>
                        <div class="row text-black">

                            <div class="col-xl-12">
                                <p class="float-end fw-bold">
                                    المجموع: @Model.Total
                                </p>
                            </div>
                            <hr style="border: 2px solid black;">
                        </div>
                        <div class="text-center" style="margin-top: 90px;">
                            <img src="~/assets/images/barcodeImage.png" alt="Shopping barcode">
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center" style="margin-top: 90px;">
            <a asp-action="Index"><u class="text-info">الصفحة الرئيسية</u></a>
            </div>
        </div>
    </section>
</div>
