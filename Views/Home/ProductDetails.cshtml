@model IEnumerable<Product>;
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Home Page";
	var ProductDetails = ViewBag.ProductDetails;

}
	<div id="layoutSidenav">
		<div id="layoutSidenav_nav">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">
						<div class="sb-sidenav-menu-heading">Core</div>
						<a class="nav-link" href="index.html">
							<div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
							Dashboard
						</a>
						<a class="nav-link" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
							المنتجات
						</a>
						<a class="nav-link" asp-action="ProductDetails">
							<div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
							تفاصيل المنتجات
						</a>
						<a class="nav-link" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
							الزبائن
						</a>
						<a class="nav-link" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
							الفواتير
						</a>
					    <a class="nav-link" asp-action="Index">
						<div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
						بطاقات الدفع المعتمدة
					    </a>
					</div>
				</div>
				<div class="sb-sidenav-footer">
					<div class="small">Logged in as:</div>
				    <p>@ViewBag.Name</p>
					<partial name="_LoginPartial" />
				</div>
			</nav>
		</div>
	<div class="container-fluid" dir="rtl">
	<div class="row ">
		<div class="col-sm-10">
			<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
				<!--begin::Content wrapper-->
				<div class="d-flex flex-column flex-column-fluid">
					<!--begin::Toolbar-->
					<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
						<!--begin::Toolbar container-->
						<!--end::Toolbar container-->
					</div>
					<!--end::Toolbar-->
					<!--begin::Content-->
					<div id="kt_app_content p-10" class="app-content flex-column-fluid">
						<!--begin::Content container-->
						<div id="kt_app_content_container p-5" class="app-container container-xxl" dir="rtl">
								<div class="card" style="overflow-x: auto;">
								<!--begin::Card header-->
								<div class="card-header border-0 pt-6">
									<!--begin::Card title-->
									<div class="card-title">
										<!--begin::Search-->
										<div class="d-flex align-items-center position-relative my-1">
											<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
											<span class="svg-icon svg-icon-1 position-absolute ms-1">
												<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
													<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
													<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
												</svg>
											</span>
											<!--end::Svg Icon-->
											<input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="    Search Customers" />
										</div>
										<!--end::Search-->
									</div>
									<!--begin::Card title-->
									<!--begin::Card toolbar-->
									<div class="card-toolbar">
										<!--begin::Toolbar-->
										<div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
											<!--begin::Filter-->
											<div class="w-150px me-3">
												<!--begin::Select2-->
												<form asp-action="ProductDetails" method="post">
												<select class="form-select form-select-solid" onchange="this.form.submit()" name="Id">
													<option>اختر المنتج</option>
													@if (Model != null)
													{
														@foreach (var item in Model)
														{
															<option value="@item.Id">@item.ProductName</option>
														}
													}
												</select>
										</form>
												<!--end::Select2-->
											</div>
											<!--end::Filter-->

											<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> إضافة تفاصيل منتج</button>
											<!--end::Add customer-->
										</div>
										<!--end::Toolbar-->
										<!--begin::Group actions-->
										<div class="d-flex justify-content-end align-items-center d-none" data-kt-customer-table-toolbar="selected">
											<div class="fw-bold me-5">
												<span class="me-2" data-kt-customer-table-select="selected_count"></span>Selected
											</div>
											<button type="button" class="btn btn-danger" data-kt-customer-table-select="delete_selected">Delete Selected</button>
										</div>
										<!--end::Group actions-->
									</div>
									<!--end::Card toolbar-->
								</div>
								<!--end::Card header-->
								<!--begin::Card body-->
								<div class="card-body pt-0">
									<!--begin::Table-->
									<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
										<!--begin::Table head-->
										<thead>
											<!--begin::Table row-->
											<tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
												<th class="min-w-125px text-end" style="font-family:cairo">رقم المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo">اسم المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> وصف المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> سعر المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> طراز المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> كمية المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> لون المنتج </th>
												<th class="min-w-125px text-end" style="font-family:cairo"> صورة المنتج </th>
												<th colspan="2" class="min-w-125px text-end" style="font-family:cairo">إجراء </th>

											</tr>
											<!--end::Table row-->
										</thead>
										<!--end::Table head-->
										<!--begin::Table body-->
										<tbody class="fw-semibold text-gray-600">
										
											@if (ProductDetails != null)
											{
												foreach (var item in ProductDetails)
												{
													<tr>
														@if (Model != null)
														{
															@foreach (var item1 in Model)
															{
																@if (item1.Id == item.ProductId)
																{
																	var productName = item1.ProductName;
																}
															}
														}
													    <td>@item.ProductId</td>
													    <td></td>
														<td>@item.Description</td>
														<td>@item.Price</td>
														<td>@item.Model</td>
														<td>@item.QTY</td>
														<td>@item.Color</td>
														<td>@item.Image</td>
														<td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a></td>
														<td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
													</tr>
												}
											}

										</tbody>
										<!--end::Table body-->
									</table>
									<!--end::Table-->
								</div>
								<!--end::Card body-->
							</div>


							<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel">إضافة تفاصيل منتج</h5>
											<button type="button" class="btn-close text-end" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										<form asp-action="AddProductDetails" method="post">
											<div class="modal-body">
												<div class="row">
													<div class="col-sm-12">
														<lable for="ProductId"> اسم المنتج</lable>
														<select name="ProductId" class="form-control form-control-sm">
															@if(Model != null)
															{
																@foreach (var item in Model)
																{
																<option value="@item.Id">@item.ProductName</option>	
																}
															}
														</select>
													</div>
												</div>
												<div class="row">
													<div class="col-sm-6">
														<lable for="Description"> وصف المنتج</lable>
														<input type="text" name="Description" id="Description" class="form-control form-control-sm" />
													</div>
													<div class="col-sm-6">
														<lable for="Price"> سعر المنتج</lable>
														<input type="text" name="Price" id="Price" class="form-control" />
													</div>
												</div>
												<div class="row">
													<div class="col-sm-6">
														<lable for="Model"> طراز المنتج</lable>
														<input type="text" name="Model" id="Model" class="form-control form-control-sm" />
													</div>
													<div class="col-sm-6">
														<lable for="QTY"> كمية المنتج</lable>
														<input type="number" name="QTY" id="QTY" class="form-control" />
													</div>
												</div>
												<div class="row">
													<div class="col-sm-6">
														<lable for="Color"> لون المنتج</lable>
														<input type="text" name="Color" id="Color" class="form-control form-control-sm" />
													</div>
													<div class="col-sm-6">
														<lable for="Image"> صورة المنتج</lable>
														<input type="text" name="Image" id="Image" class="form-control" />
													</div>
												</div>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>
												<button type="submit" class="btn btn-primary">حفظ</button>
											</div>
										</form>

									</div>
								</div>
							</div>


						</div>
						<!--end::Content container-->
					</div>
					<!--end::Content-->
				</div>

			</div>
		</div>
	</div>
</div>